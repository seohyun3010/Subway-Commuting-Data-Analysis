df_time = pd.read_csv('/content/drive/MyDrive/일상다반사_데이터분석/서울시 지하철 호선별 역별 시간대별 승하차 인원 정보.csv',encoding='cp949')

df_time.head()

# 2호선이 있는 데이터만
df_2line = df_time[df_time['호선명'] == '2호선']

# 사용월이 2020년 1월부터 2025년 7월까지 (5년)
df_2line_selected = df_2line[
    (df_2line['사용월'] >= 202001) & (df_2line['사용월'] <= 202507)
]

df_2line_selected.head()

### 원하는 역명 리스트만 추출

# 역명 리스트 생성
target_stations = [
      '강남', '잠실(송파구청)', '홍대입구', '구로디지털단지',
    '삼성(무역센터)', '신림', '선릉', '역삼', '성수'
]

# 해당 역명 추출
df_2line_selected_stations = df_2line_selected[df_2line_selected['지하철역'].isin(target_stations)]

df_2line_selected_stations

### 2025년 기준 - 시간대별 승차 인원 정보

# 사용월 기준으로 202501 ~ 202507 구간 데이터만 추출
df_period = df_2line_selected_stations[
    (df_2line_selected_stations['사용월'] >= 202501) &
    (df_2line_selected_stations['사용월'] <= 202507)
]

# '승차인원'이 들어간 컬럼만 추출
geton_col = [col for col in df_period.columns if '승차인원' in col]
## for col in df_period.columns에서의 col은 df_period.columns의 각 원소(각 컬럼명)를 한 번씩 받아오는 변수 (-> 파이썬 반복문 개념)
## for 앞의 col - 조건문이 참일 때, 그 값을 리스트에 추가하겠다는 의미

# 지하철역 + 시간대별 승차인원만 추출
df_geton = df_period[['지하철역'] + geton_col]

# 사용월 기간 내 동일 역이 여러 행 -> 각 시간대 별 합산 (월별 데이터라면)
geton_count = df_geton.groupby('지하철역')[geton_col].sum().reset_index()

geton_count

###  엑셀로 변환해서 다운로드

geton_count.to_excel('지하철_승차인원_집계.xlsx', index = False)

from google.colab import files
files.download('지하철_승차인원_집계.xlsx')

### 2025년 기준 - 시간대별 하차 인원 정보

# '하차인원'이 들어간 컬럼만 추출
getoff_col = [col for col in df_period.columns if '하차인원' in col]

# 지하철역 + 시간대별 하차인원만 추출
df_getoff = df_period[['지하철역'] + getoff_col]

# 사용월 기간 내 동일 역이 여러 행 -> 각 시간대 별 합산 (월별 데이터라면)
getoff_count = df_getoff.groupby('지하철역')[getoff_col].sum().reset_index()

getoff_count

# 엑셀로 변환
getoff_count.to_excel('지하철_하차인원_집계.xlsx', index = False)
files.download('지하철_하차인원_집계.xlsx')

### 2025년 기준 - 출근 시간 (07시-11시) 승차 인원이 제일 많은 호선 및 지하철역

# 07시 ~ 11시 데이터만 (출근)
new_cols = ['사용월', '호선명', '지하철역', '07시-08시 승차인원', '08시-09시 승차인원', '09시-10시 승차인원']
df_commute = df_time[new_cols]

df_commute

# 사용월 기준으로 202501 ~ 202507 구간 데이터만 추출
df_commute_period = df_commute[
    (df_commute['사용월'] >= 202501) &
    (df_commute['사용월'] <= 202507)
]

# 시간대 별 승차인원 컬럼만 리스트 형태로
geton_cols = [col for col in df_commute_period.columns if '승차인원' in col]

# 합산 컬럼 추가
df_commute_period['승차합'] = df_commute_period[geton_cols].sum(axis=1)

# 지하철역별로 통합
df_commute_group = df_commute_period.groupby(['호선명', '지하철역'], as_index=False)['승차합'].sum()

df_commute_group

# 승차합 기준으로 내립차순 정렬 및 상위 10개 추출
top10_commute = df_commute_group.sort_values(by='승차합', ascending=False).head(10)

top10_commute

## 색상 리스트 직접 지정
# 호선별 생상 매핑 함수
def commute_get_color(row):
  if row['지하철역'] == '서울역':
    return '#0066CC'
  elif row['지하철역'] == '연신내':
    return '#FFA500'
  elif row['지하철역'] == '쌍문':
    return '#0000FF'
  elif row['지하철역'] == '까치산' or row['지하철역'] == '화곡':
    return '#800080'
  else:
    return '#26A65B'

colors = top10_commute.apply(commute_get_color, axis=1)

plt.figure(figsize=(12,6))
bars = plt.bar(top10_commute['지하철역'], top10_commute['승차합'], color=colors)

plt.title('상위 10개 역 출근 시간 승차')
plt.xlabel('지하철역')
plt.ylabel('승차합')
plt.xticks(rotation=45)
plt.tight_layout()

# 범례 추가하기
# 1호선 : 진한 파랑, 2호선 : 초록, # 3호선 : 주황, 4호선 : 파랑, 5호선 : 보라
legend_patches = [
    mpatches.Patch(color='#0066CC', label='1호선'),
    mpatches.Patch(color='#26A65B', label='2호선'),
    mpatches.Patch(color='#FFA500', label='3호선'),
    mpatches.Patch(color='#0000FF', label='4호선'),
    mpatches.Patch(color='#800080', label='5호선')

]
plt.legend(handles=legend_patches)

plt.show()

